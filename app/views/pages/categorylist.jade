extends ../layout
block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 名稱
                        th 時間
                        th 修改
                        th 刪除
                tbody
                    each item in categories
                        tr(class="item-id-#{item._id}")
                            td #{item.name}
                            td #{moment(item.meta.updateAt).format('DD/MM/YYYY')}
                            td: a(href="../category/update/#{item.id}") 修改
                            td
                                button.btn.btn-danger.del(type="button", data-id="#{item._id}") 刪除
    script(src="/static/js/category.js")