extends ../layout
block content
    .container
        .row
            each cat in categories
                .panel.panel-default
                    .panel-heading
                        h3 
                            a(href='/results?cat=#{cat._id}') #{cat.name}
                    .panel-body.masonry-container
                        each movie in movies
                            if cat._id.toString() == movie.category.toString()
                                .masonry-item
                                    .thumbnail
                                        a(href="/movie/#{movie._id}")
                                            if movie.poster.indexOf('http') > -1
                                                img(src="#{movie.poster}", alt="#{movie.title}")
                                            else
                                                img(src="/static/upload/#{movie.poster}", alt="#{movie.title}")
                                        .caption
                                            h3 #{movie.title}
                                            p: a.btn.btn-primary(href="/movie/#{movie._id}", role="button") 觀看預告片
        

                        
                             
           