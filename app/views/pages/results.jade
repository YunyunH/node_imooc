extends ../layout
block content
    .container
        .row
            .panel.panel-default
                .panel-heading
                    h3 #{keyword}
                .panel-body.masonry-container
                    if movies && movies.length > 0
                         each item in movies
                            .masonry-item
                                .thumbnail
                                    a(href="/movie/#{item._id}")
                                        if item.poster.indexOf('http') > -1
                                            img(src="#{item.poster}", alt="#{item.title}")
                                        else
                                            img(src="/static/upload/#{item.poster}", alt="#{item.title}")
                                    .caption
                                        h3 #{item.title}
                                        p: a.btn.btn-primary(href="/movie/#{item._id}", role="button") 觀看預告片
           